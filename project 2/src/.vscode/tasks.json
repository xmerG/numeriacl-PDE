{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "test.cpp",
                "Vector.cpp",
                "Sparse_Matrix.cpp",
                "Multigrid.cpp",
                "restriction/Full_weighting.cpp",
                "restriction/Injection.cpp",
                "prolongation/Linear.cpp",
                "prolongation/Quadric.cpp",
                "-o",
                "${fileDirname}/test",
                "-lm"          // 链接数学库（某些系统需要）
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}